<van-cell-group wx:for="{{classData}}" wx:key="*this" wx:for-item="class_data">
  <van-cell title="{{class_data.name}}" label="{{'备注:'+class_data.age + 'ID：' +class_data.id}}" center="true" size="large" title-width="6em" icon="manager-o"             border="true" custom-class="list1">
    <view class="item_rihgt">
      <van-icon id="vanicon1" 
                name="{{class_data.cons.con1}}" 
                size="2em" 
                custom-class="ev_icon" 
                bind:click="handleLeave" 
                data-index="{{class_data.id+'_'+'1'}}" />
      <van-icon id="vanicon2" 
                name="{{class_data.cons.con2}}" 
                size="2em" 
                custom-class="ev_icon" 
                bind:click="handleLeave" 
                data-index="{{class_data.id+'_'+'2'}}" />
      <van-icon id="vanicon3"
                name="{{class_data.cons.con3}}" 
                size="2em" 
                custom-class="ev_icon" 
                bind:click="handleLeave" 
                data-index="{{class_data.id+'_'+'3'}}" />
    </view>
    <view class="item_rihgt">
      <text class="ev_txt">请假</text>
      <text class="ev_txt">缺勤</text>
      <text class="ev_txt">到勤</text>
    </view>
  </van-cell>
</van-cell-group>
<van-button size="large" round type="primary" custom-class="btn_complete" bind:click="complete">点名完成</van-button>